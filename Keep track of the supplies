water = 400
milk = 540
beans = 120
disp_cups = 9
money = 550 

inp = input('Write action (buy, fill, take, remaining, exit): ')

if inp == 'buy':
    inp2 = input('What do you want to buy? 1 - espresso, 2 - latte, 3 - cappuccino, back - to main menu: ')
    if inp2 == 1:
        if water >= 250 and beans >= 16:
            print('I have enough resources, making you a coffee!')
            water -= 250
            milk -= 0
            beans -= 16
            disp_cups -= 1
            money +=  4
        elif water < 250:
            print('Sorry, not enough water!')
        elif beans < 16:
            print('Sorry, not enough coffee beans!')
                
    elif inp2 == 2:
        if water >= 350 and milk >= 75 and beans >= 20:
            print('I have enough resources, making you a coffee!')
            water -= 350
            milk -= 75
            beans -= 20
            disp_cups -= 1
            money +=  7
        elif water < 350:
            print('Sorry, not enough water!')
        elif milk < 75:
            print('Sorry, not enough milk!')
        elif beans < 20:
            print('Sorry, not enough coffee beans!')
                
    elif inp2 == 3:
        if water >= 200 and milk >= 100 and beans >= 12:
            print('I have enough resources, making you a coffee!')
            water -= 200
            milk -= 100
            beans -= 12
            disp_cups -= 1
            money +=  6
        elif water < 200:
            print('Sorry, not enough water!')
        elif milk < 100:
            print('Sorry, not enough milk!')
        elif beans < 12:
            print('Sorry, not enough coffee beans!')    
            
    elif inp2 == 'back':
        input('Write action (buy, fill, take, remaining, exit): ')   
            
elif inp == 'fill':
    addedwater = int(input('Write how many ml of water you want to add: '))
    water += addedwater
    addedmilk = int(input('Write how many ml of milk you want to add: '))
    milk += addedmilk
    addedbeans = int(input('Write how many grams of coffee beans you want to add: '))
    beans += addedbeans
    addedcups = int(input('Write how many disposable coffee cups you want to add: '))
    disp_cups += addedcups
        
elif inp == 'take':
    print('I gave you $', money)
    money = money - money
    print('The coffee machine has: ')
    print(water, ' of water')
    print(milk, ' of milk')
    print(beans, ' of coffee beans')
    print(disp_cups, ' of disposable cups')
    print(money, ' of money')
          
elif inp == 'remaining':
    print('The coffee machine has: ')
    print(water, ' of water')
    print(milk, ' of milk')
    print(beans, ' of coffee beans')
    print(disp_cups, 'of disposable cups')
    print(money, ' of money')
        
elif inp == 'exit':
    quit()
